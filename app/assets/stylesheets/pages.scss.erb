/////////// RESPONSIVE CIRCLES //////////////

// bigger single circle
.circle-text {
    width:60%;
}
// for responsive circle
.circle-text:after {
    content: "";
    display: block;
    width: 100%;
    height:0;
    padding-bottom: 100%;
    background: #F44336;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    margin-top: -60%;
    box-shadow: 0 0 15em rgba(0, 150, 136, .9);
}

// for responsive text in circle
.circle-text div {
    float:left;
    width:100%;
    padding-top:43%;
    line-height:1em;
    margin-top:-0.5em;
    text-align:center;
    color:white;
}

// smaller tri circles
.circle-text-img {
    width:60%;
}

.circle-text-img::after {
    content: "";
    display: block;
    width: 100%;
    height:0;
    padding-bottom: 100%;
    background: #F44336;
    background-image: url("bw_me.png");
    background-size: cover;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    margin-top: -60%;
    box-shadow: 0 0 15em rgba(63, 81, 181, 1);
}

.circle-text-img div {
   float:left;
   width:100%;
   padding-top:50%;
   line-height:1em;
