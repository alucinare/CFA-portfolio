/// this makes it responsive
.circle-text {
    width:60%;
}
.circle-text:after {
    content: "";
    display: block;
    width: 100%;
    height:0;
    padding-bottom: 100%;
    background: #EC407A;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    margin-top: -60%;
    box-shadow: 0 0 15em #304FFE;
}
.circle-text div {
    float:left;
    width:100%;
    padding-top:50%;
    line-height:1em;
    margin-top:-0.5em;
    text-align:center;
    color:white;
}

.circle-text-img {
    width:60%;
}

.circle-text-img::after
{
    content: "";
    display: block;
    width: 100%;
    height:0;
    padding-bottom: 100%;
    background: #EC407A;
    background-image: url("mercury.png");
    background-position: center;
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    margin-top: -60%;
    box-shadow: 0 0 15em #304FFE;
}

.circle-text-img div
{
   float:left;
   width:100%;
   padding-top:50%;
   line-height:1em;
   margin-top:-0.5em;
   text-align:center;
   color:white;
}
