//// margins

.start-margin-bot {
  margin-bottom: 1em;
}

.main-content {
  margin-top: 5em;
  margin-bottom: 1em;
}

////////// center content ////////

.circle-back {
  border-radius: 50%;
	width: 450px;
	height: 450px;

  background-color: #3797b6;
  background-image: url(bw_transparent_me.png);
  background-size: cover;
  display: block;

  box-shadow: 0px 0px 45px 1px #888888;
}

.margins-me {
  margin-top: 5em;
}

.bg-col-p {
  background-color: #006986;
}

.box-shad {
  box-shadow: 0px 0px 45px 1px #888888;
}

.p-col {
  color: white;
}

.main-bottom {
  margin-top: 9em;
  width: 100%;
  border-top: 5px solid #3797b6;

  box-shadow: 0px 0px 45px 7px #888888;
}

//////////// divider ////////////

.end-margin-bot {
  width: 100%;
  margin-top: 7em;
}

//////////// projects boxes ////////////

.projects {
  padding-bottom: 5em;

  background-color: #006986;
  box-shadow: 0px 0px 20px 5px #888888;
}

.header-pad {
  padding-top: 2em;
  padding-bottom: 2em;
}

.project-image {
   position: relative;
   width: 100%; /* for IE 6 */
}

.project-image h2 {
   position: absolute;
   top: 200px;
   left: 12px;
   width: 100%;
}

.project-image h2 span {
   color: white;
   font: bold 24px/45px Helvetica, Sans-Serif;
   letter-spacing: -1px;
   background: rgb(129, 0, 47); /* fallback color */
   background: rgba(236, 105, 132, 0.7);
   padding: 10px;
}

.project-image:hover h2 span {
  display: none;
}

h2 span.spacer {
   padding:0 5px;
}

/////////// Gif boxes layer //////////


.img-size {
  height: 300px;
  width: 600px;

  border-radius: 1%;
}
