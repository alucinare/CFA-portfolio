/////////// NAVBAR /////////

.white-text {
  color: white;
}

a {
  color: white;
}

a:hover {
  color: #81002f;
}

////////// BACKGROUND VIDEO //////////////////

.fullscreen-bg-video {
  position: relative;
  z-index: 1;

  top: 0;
  left: 0;
  width: 100%    !important;
  height: auto   !important;

  border-bottom: 5px solid #3797b6;
  box-shadow: 0px 0px 20px 7px #888888;
}

///////////// TRANSPARENCY LAYER //////////

.transparent {
  background-color: rgba(0, 105, 134, 0.2);
  top: 0;
  left: 0;
  width: 100%;
  height: 852px;

  position: absolute;
  z-index: 2;
}


/////////// CENTER TEXT //////////////

.text-header {
  position: absolute;;
  z-index: 3;
}

.content > .white-text {
  color: white;
}

.margin-title {
  margin-top: 15%;
}

.content:not(:last-child) {
  margin-bottom: 0;
}

.blue-letter {
  color: #3797b6;
}

.salmon-letter {
  color: #81002f;
}
