/////////// NAVBAR /////////

.column > .white-text {
  color: white;
}

////////// BACKGROUND VIDEO //////////////////

.fullscreen-bg-video {
  position: relative;
  z-index: 1;

  top: 0;
  left: 0;
  width: 100%    !important;
  height: auto   !important;

  border-bottom: 5px solid #3797b6;
  box-shadow: 0px 0px 20px 7px #888888;
}

///////////// TRANSPARENCY LAYER //////////

.transparent {
  background-color: rgba(0, 105, 134, 0.2);
  top: 0;
  left: 0;
  width: 100%;
  height: 683px;

  position: absolute;
  z-index: 2;
}


/////////// CENTER TEXT //////////////

.text-header {
  position: absolute;;
  z-index: 3;
}

.content > .white-text {
  color: white;
}

.margin-title {
  margin-top: 15%;
}

.content:not(:last-child) {
  margin-bottom: 0;
}

.blue-letter {
  color: #3797b6;
}

.salmon-letter {
  color: #81002f;
}


.dashed-box {
  position: relative;
  z-index: 1;
  border: dashed;
  height: 8em;
  margin-bottom: 1em;
  margin-top: 2em;
}
.gold-box {
  position: absolute;
  z-index: 3; /* put .gold-box above .green-box and .dashed-box */
  background: gold;
  width: 80%;
  left: 60px;
  top: 3em;
}
.green-box {
  position: absolute;
  z-index: 2; /* put .green-box above .dashed-box */
  background: lightgreen;
  width: 20%;
  left: 65%;
  top: -25px;
  height: 7em;
  opacity: 0.9;
}
