////////// BACKGROUND VIDEO //////////////////

.fullscreen-bg-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%    !important;
  height: auto   !important;
  z-index: -1;

  border-bottom: 5px solid #3797b6;
  box-shadow: 0px 0px 20px 7px #888888;
}

.transparent {
  background-color: rgba(0, 105, 134, 0.1);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 106.5%;
}


